{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/jasmine-framework",
      "@wdio/selenium-standalone-service"
    ],
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts",
    "./config/**.ts"
  ]
}
